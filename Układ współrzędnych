#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#include <string.h>
#include <ctype.h>

struct rekord{
int x;
int y;
};

struct rekord wspolrzedne;

int main(){

    printf("podaj wspolrzedna x:");

    while(scanf("%d", &wspolrzedne.x) != 1) //dopóki nie uda się wczytać
{

  printf("podaj bez znakow!");
  int c;
  while((c = getchar()) != '\n' && c != EOF); //pętla wyciągająca znaki z bufora
}

    printf("podaj wspolrzedna y:");
    while(scanf("%d", &wspolrzedne.y) != 1) //dopóki nie uda się wczytać
{


  printf("podaj bez znakow!");
  int c;
  while((c = getchar()) != '\n' && c != EOF); //pętla wyciągająca znaki z bufora
}

    printf("\nTwoj x to:%d, twoj y to:%d\n",wspolrzedne.x,wspolrzedne.y);


    if(wspolrzedne.y>0&&wspolrzedne.x>0)
        printf("\nTwoj punkt znajduje sie w I cwiartce ukladu!\n");

    if(wspolrzedne.y>0&&wspolrzedne.x<0)
        printf("\nTwoj punkt znajduje sie w II cwiartce ukladu!\n");

    if(wspolrzedne.y<0&&wspolrzedne.x<0)
        printf("\nTwoj punkt znajduje sie w III cwiartce ukladu!\n");

    if(wspolrzedne.y<0&&wspolrzedne.x>0)
        printf("\nTwoj punkt znajduje sie w IV cwiartce ukladu!\n");

    if(wspolrzedne.y==0||wspolrzedne.x==0)
        printf("\n Twoj punkt znajduje sie na osi ukladu!");





return 0;
}
